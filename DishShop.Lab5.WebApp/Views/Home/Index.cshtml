@model List<Dish>

<div class="d-flex flex-column justify-content-center">
    <div class="align-self-center" id="indexTitleContainer">
        <h1>Dishes</h1>
    </div>
    <div class="" id="indexButtonContainer">
        @Html.ActionLink("Create", "SetDish", "Home", null, new { @class = "btn btn-success" })
    </div>
    <div id="tableContainer">
        <table class="table table-striped" style="font-size: large">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Volume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Material.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Color.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Dish item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Volume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Material.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
